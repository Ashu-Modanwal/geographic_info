<!-- -*- mode: XML -*- -->

<!-- Navigation satellite odometry nodelet test.

     Verifies that the nodelet publishes at the rate input data are
     provided.

  -->

<launch>

  <!-- run the odometry nodelet -->
  <node pkg="nodelet" type="nodelet" name="navsat_odom_nodelet"
        args="standalone navsat_odom/nodelet" />

  <!-- run a test data generator -->
  <node pkg="navsat_odometry" type="genmoving.py" name="genmoving" />

  <test test-name="nodelet_hz_test"
        pkg="rostest" type="hztest" name="nodelet_hz" >
    <param name="hz" value="20.0" />
    <param name="hzerror" value="0.5" />
    <param name="test_duration" value="10.0" />    
    <param name="topic" value="/odom" />  
    <param name="wait_time" value="2.0" />  
  </test>

</launch>
